<%- include ('layout/header') %>
    <tr>
        <td valign="top" class="side title" style="border-collapse: collapse;border: 0;margin: 0;padding: 20px;-webkit-text-size-adjust: none;color: #000000;font-size: 16px;line-height: 26px;vertical-align: top;background-color: white;border-top: none;">
            <table style="font-weight: normal;border-collapse: collapse;border: 0;margin: 0;padding: 0;width:100%;">
                <tr>
                    <td class="head-title" style="border-collapse: collapse;border: 0;margin: 0;padding: 0;-webkit-text-size-adjust: none;color: #000000;font-size: 21px;line-height: 34px;font-weight: bold; text-align: center;">
                        <div class="mktEditable" id="main_title">
                            Hello <%=name%>,
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="sub-title" style="border-collapse: collapse;border: 0;margin: 0;padding: 0;padding-top:5px;-webkit-text-size-adjust: none;color: #000000;font-size: 18px;line-height: 29px;font-weight: bold;text-align: center;">
                        <div class="mktEditable" id="intro_title">
                            Your verification code
                        </div></td>
                </tr>
                <tr>
                    <td style="border-collapse: collapse;border: 0;margin: 0;padding: 0;-webkit-text-size-adjust: none;color: #000000;font-size: 16px;line-height: 24px;">
                        &nbsp;<br>
                    </td>
                </tr>
                <tr>
                    <td class="text" style="border-collapse: collapse;border: 0;margin: 0;padding: 0;-webkit-text-size-adjust: none;color: #000000;font-size: 16px;line-height: 24px;">
                        <div class="mktEditable" id="download_button" style="text-align: center;">
                            <a style="color:#FFC235;font-size:20px;font-weight:bold;text-decoration:none;"><%=verifyCode%></a>
                        </div>
                    </td>
                </tr>   
                <tr>
                    <td class="top-padding" style="border-collapse: collapse;border: 0;margin: 0;padding: 15px 0;padding-top:30px;-webkit-text-size-adjust: none;color: #000000;font-size: 12px;line-height: 21px;text-align: center;">
                        <div>Enter this code to verify your account.</div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
<%- include ('layout/footer') %>